{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules", "packages/**/dist", "packages/svelte/.svelte-kit/"],
  "references": [
    {
      "path": "packages/core"
    },
    {
      "path": "packages/svelte"
    },
    {
      "path": "packages/event-emitter"
    },
    {
      "path": "packages/protocol"
    },
    {
      "path": "packages/storage"
    },
    {
      "path": "packages/yjs-storage"
    }
  ]
}
