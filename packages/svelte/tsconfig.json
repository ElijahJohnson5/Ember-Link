{
	"extends": ["./.svelte-kit/tsconfig.json"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"composite": true,
		"emitDeclarationOnly": false,
		"noEmit": null,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"types": ["@testing-library/jest-dom"]
	},
	"include": ["../core/**/*", "./src/**/*"],
	"exclude": ["../core/dist"],
	"references": [
		{
			"path": "../core"
		}
	]
}
